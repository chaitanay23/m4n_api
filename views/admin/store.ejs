<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/store" method="POST">
            <div class="form-control">
                <label for="title">Store Name</label>
                <input type="text" name="store_name" id="store_name" >
            </div>
          
            <div class="form-control">
                <label for="price">Owner Name</label>
                <input type="text" name="owner_name" id="owner_name" step="0.01" >
            </div>
            <div class="form-control">
                <label for="price">State</label>
                <input type="text" name="state" id="state" step="0.01" >
            </div>
            <div class="form-control">
                <label for="price">City</label>
                <input type="text" name="city" id="city" step="0.01">
            </div>
            <div class="form-control">
                <label for="description">Area</label>
                <input type="text" name="area" id="area" rows="5">
            </div>
            <div class="form-control">
                <label for="price">Address</label>
                <!-- <input type="text" name="address" id="address" step="0.01" > -->
                <textarea name="address" id="address" step="0.01"></textarea>
            </div>
            <div class="form-control">
                <label for="price">Zipcode</label>
                <input type="number" name="zipcode" id="zipcode" step="0.01" >
            </div>
            <div class="form-control">
                <label for="price">Delivery Charges</label>
                <input type="number" name="delivery_charges" id="delivery_charges" step="0.01" >
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>

            <button class="btn" type="submit">Add Store</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %></div>